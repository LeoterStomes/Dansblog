---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import TerminalQuote from '../components/TerminalQuote.astro';
import { BILIBILI_URL, CREATINF_URL, GITHUB_URL, SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 6);

const HOME_WALLPAPER = '/image/home/2rd1yuubn4hc1.png';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="page-shell py-10 md:py-14" transition:name="page-main" transition:animate="fade">
			<div class="space-y-6">
				<section class="hero-enter overflow-hidden rounded-2xl border border-zinc-200 bg-white dark:border-zinc-700 dark:bg-zinc-900">
					<div class="relative h-[44vh] min-h-[300px] w-full">
						<img src={HOME_WALLPAPER} alt="Homepage wallpaper" class="h-full w-full object-cover" />
						<div class="absolute inset-0 bg-zinc-900/10 dark:bg-zinc-950/25"></div>
					</div>
				</section>

				<section class="section-enter section-enter-delay-1 grid grid-cols-1 md:grid-cols-[1fr_auto] gap-6 items-start">
					<div class="hero-enter hero-enter-delay-2">
						<h1 class="text-3xl font-semibold tracking-tight text-zinc-900 dark:text-zinc-100 md:text-4xl" transition:name="page-title" transition:animate="fade">
							{SITE_TITLE}
						</h1>
						<p class="mt-2 font-sans text-sm text-zinc-500 dark:text-zinc-400">Welcome to my blog.</p>
						<p class="mt-1 font-sans text-sm text-zinc-500 dark:text-zinc-400">{SITE_DESCRIPTION}</p>
						<div class="mt-3 flex flex-wrap gap-2">
							<span class="rounded-lg border border-zinc-200 px-2.5 py-1 text-xs font-medium text-zinc-600 dark:border-zinc-700 dark:text-zinc-300">
								UI: English
							</span>
							<span class="rounded-lg border border-zinc-200 px-2.5 py-1 text-xs font-medium text-zinc-600 dark:border-zinc-700 dark:text-zinc-300">
								Content: Chinese (long-form)
							</span>
						</div>
						<div class="mt-4 flex items-center gap-2">
							<a
								href={GITHUB_URL}
								target="_blank"
								rel="noreferrer"
								class="icon-button inline-flex h-10 w-10 items-center justify-center rounded-xl border border-zinc-200 text-zinc-600 transition-colors hover:border-zinc-400 hover:text-zinc-900 dark:border-zinc-700 dark:text-zinc-300 dark:hover:border-zinc-500 dark:hover:text-zinc-100"
								aria-label="GitHub"
							>
								<svg viewBox="0 0 24 24" class="h-5 w-5 fill-current" aria-hidden="true">
									<path d="M12 .3A12 12 0 0 0 8.2 23.7c.6.1.8-.2.8-.6v-2.3c-3.3.7-4-1.4-4-1.4-.5-1.3-1.3-1.7-1.3-1.7-1-.7.1-.7.1-.7 1.1.1 1.8 1.1 1.8 1.1 1 .1 1.6.7 2 1.3.9.2 1.8.4 2.7.1.1-.7.4-1.3.7-1.7-2.7-.3-5.5-1.3-5.5-5.9 0-1.3.5-2.4 1.1-3.2-.1-.3-.5-1.5.1-3.2 0 0 .9-.3 3.2 1.1a10.9 10.9 0 0 1 5.9 0c2.2-1.4 3.2-1.1 3.2-1.1.6 1.7.2 2.9.1 3.2.7.8 1.1 1.9 1.1 3.2 0 4.6-2.8 5.6-5.5 5.9.4.4.8 1.1.8 2.2v3.3c0 .4.2.7.8.6A12 12 0 0 0 12 .3" />
								</svg>
								<span class="sr-only">GitHub</span>
							</a>
							<a
								href={BILIBILI_URL}
								target="_blank"
								rel="noreferrer"
								class="icon-button inline-flex h-10 w-10 items-center justify-center rounded-xl border border-zinc-200 text-zinc-600 transition-colors hover:border-zinc-400 hover:text-zinc-900 dark:border-zinc-700 dark:text-zinc-300 dark:hover:border-zinc-500 dark:hover:text-zinc-100"
								aria-label="Bilibili"
							>
								<svg viewBox="0 0 24 24" class="h-5 w-5 fill-current" aria-hidden="true">
									<path d="M7.4 2.8a1 1 0 0 1 1.4 0L12 6l3.2-3.2a1 1 0 1 1 1.4 1.4L14.5 6.3h3.8A3.7 3.7 0 0 1 22 10v8.3A3.7 3.7 0 0 1 18.3 22H5.7A3.7 3.7 0 0 1 2 18.3V10a3.7 3.7 0 0 1 3.7-3.7h3.8L7.4 4.2a1 1 0 0 1 0-1.4ZM5.7 8.3A1.7 1.7 0 0 0 4 10v8.3c0 .9.8 1.7 1.7 1.7h12.6c.9 0 1.7-.8 1.7-1.7V10c0-.9-.8-1.7-1.7-1.7H5.7Zm1.8 3a1 1 0 0 1 1 1v3.4a1 1 0 1 1-2 0v-3.4a1 1 0 0 1 1-1Zm9 0a1 1 0 0 1 1 1v3.4a1 1 0 1 1-2 0v-3.4a1 1 0 0 1 1-1Z" />
								</svg>
								<span class="sr-only">Bilibili</span>
							</a>
							<a
								href={CREATINF_URL}
								target="_blank"
								rel="noreferrer"
								class="icon-button inline-flex h-10 w-10 items-center justify-center rounded-xl border border-zinc-200 text-zinc-600 transition-colors hover:border-zinc-400 hover:text-zinc-900 dark:border-zinc-700 dark:text-zinc-300 dark:hover:border-zinc-500 dark:hover:text-zinc-100"
								aria-label="CreatInf"
							>
								<span class="text-lg font-semibold leading-none">∞</span>
								<span class="sr-only">CreatInf</span>
							</a>
						</div>
					</div>

					<div class="hero-enter hero-enter-delay-2 w-full max-w-sm justify-self-end">
						<TerminalQuote />
					</div>
				</section>
			</div>

			<section class="section-enter section-enter-delay-2 mt-10">
				<div class="mb-4 flex items-center justify-between">
					<h2 class="text-xl font-semibold tracking-tight">Latest Posts</h2>
					<a href="/blog" class="text-sm font-medium text-blue-600 no-underline hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300">View all</a>
				</div>
				<ul class="grid gap-4 md:grid-cols-2">
					{
						posts.map((post, idx) => (
							<li class="card-enter" style={`animation-delay: ${160 + idx * 45}ms`}>
								<a
									href={`/blog/${post.id}/`}
									class="card-surface card-interactive block h-full p-5 no-underline"
								>
									<p class="m-0 text-xs text-zinc-500 dark:text-zinc-400">
										<FormattedDate date={post.data.pubDate} />
									</p>
									<h3 class="mt-2 text-lg font-semibold tracking-tight text-zinc-900 dark:text-zinc-100">{post.data.title}</h3>
									<p class="mt-2 font-serif text-sm leading-7 text-zinc-600 dark:text-zinc-300">{post.data.description}</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
